        noTone(MUSIK_PIN);
        if (!notes[i] == -1) {
            tone(MUSIK_PIN, notes[i]);
        }
        delay(durat[i]);
    }
}

void setup() {
    pinMode(TASTER_PIN, INPUT);
}

void loop() {
    if (!started) {
        if (digitalRead(TASTER_PIN) == HIGH) {
            started = true;
            play_melody();
        }
    }
}
